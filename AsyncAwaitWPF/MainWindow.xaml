<Window x:Class="AsyncAwaitWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Async Await Example" Height="200" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="SyncButton" Content="Start Synchronisierte Arbeit" Click="SyncButton_Click" Margin="10"/>
            <Button x:Name="AsyncButton" Content="Start Asynchronisiert Arbeit" Click="AsyncButton_Click" Margin="10"/>
            <TextBlock x:Name="StatusTextBlock" Text="Status: Bereit!" FontSize="14" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
